{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies": 0,
        "no-console": 0,
        "no-underscore-dangle": 0,
        "no-restricted-globals": 0,
        "linebreak-style": 0,
        "semi": 0,
        "new-cap": 0,
        "object-curly-spacing": 0,
        "require-jsdoc" : 0,
        "no-param-reassign": 0,
        "no-use-before-define": 0,
        "max-len": "off",
        "no-shadow": 0,
        "no-unused-vars": 0,
        "implicit-arrow-linebreak": 0,
        "no-lonely-if": 0,
        "no-redeclare": 0,
        "no-alert": 0,
        "quotes": 0
    }
}
